@if (User.Identity.IsAuthenticated)
{
    <form asp-area="" asp-controller="Logout" asp-action="Index" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <img id="nav-avatar" src="@SteamApiInterface.GetSteamPlayers(new SteamId { steam_id = User.Identity.Name})[0].avatar" />
            </li>
            <li>
                @*<a asp-area="" asp-controller="Profile" asp-action="Index" title="Profile">@SteamApiInterface.GetSteamPlayers()[0].personaname@UserService.GetUser().username</a>*@
                <a asp-area="" asp-controller="Profile" asp-action="Index" title="Profile">@SteamApiInterface.GetSteamPlayers(new SteamId { steam_id = User.Identity.Name })[0].personaname@*@UserService.GetUser().username*@</a>

            </li>
            <li>
                @*<button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>*@
                <a asp-controller="Logout" asp-action="Index">Logout</a>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Register" asp-action="Index">Register</a></li>
        <li><a asp-area="" asp-controller="Login" asp-action="Index">Log in</a></li>
    </ul>
}